{
	"compilerOptions": {
		"target": "ES2019",
		"module": "ES2020",
		"moduleResolution": "node",
		"outDir": "lib",
		"rootDir": "src",
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"strict": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"noUncheckedIndexedAccess": true,
		"paths": {
			"*": ["./src/types/*", "./*"],
		},
		"typeRoots": [
			"node_modules/@pollyjs/adapter/types.d.ts",
			"node_modules/@pollyjs/persister/types.d.ts"
		],
	},
	"include": ["src/**/*"],
}
